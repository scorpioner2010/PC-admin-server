@page
@model AdminPanel.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
}

<h1>Admin page</h1>
<p>Це буде панель керування.</p>

<form method="post" asp-page-handler="Shutdown">
    <button type="submit" class="btn btn-danger">Shutdown now (test)</button>
</form>

<form method="post" asp-page-handler="Schedule" class="mt-3">
    <label for="Minutes">Shutdown in minutes:</label>
    <input id="Minutes" name="Minutes" type="number" min="1" value="5" class="form-control" style="max-width:150px;" />
    <button type="submit" class="btn btn-warning mt-2">Schedule</button>
</form>

@if (Model.Message != null)
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}