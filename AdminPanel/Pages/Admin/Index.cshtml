@page
@model AdminPanel.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
}

<div class="container-fluid px-2">
    <h1 class="h3 my-3">Admin</h1>
    <p class="text-muted mb-3">Minimal mobile control panel.</p>

    @if (Model.Agents.Count == 0)
    {
        <div class="alert alert-secondary">No active agents.</div>
    }
    else
    {
        <div class="d-flex flex-column gap-3">
            @foreach (var kv in Model.Agents)
            {
                var machine = kv.Key;
                var rec = kv.Value;
                Model.Policies.TryGetValue(machine, out var pol);

                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-bold fs-5">@rec.Status.Machine</div>
                                <div class="text-muted small">OS: @rec.Status.OS</div>
                            </div>
                            <div>
                                @if (pol?.RequireLock == true)
                                {
                                    <span class="badge bg-danger">LOCK</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">OK</span>
                                }
                            </div>
                        </div>

                        <div class="mt-2 small text-muted">
                            <div>Uptime: @rec.Status.UptimeSec s</div>
                            <div>Last status: @rec.Status.Time.ToLocalTime()</div>
                            <div>Last seen: @rec.LastSeen.ToLocalTime()</div>
                            <div>Allowed until: @(pol?.AllowedUntil.ToLocalTime().ToString() ?? "-")</div>
                            <div>Manual unlock grace: @(pol?.ManualUnlockGraceMinutes ?? 10) min</div>
                        </div>

                        <div class="mt-3">
                            <div class="row g-2">
                                <div class="col-12 col-sm-4">
                                    <form method="post" asp-page-handler="Block">
                                        <input type="hidden" name="machine" value="@machine" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger w-100">Block</button>
                                    </form>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <form method="post" asp-page-handler="Unblock">
                                        <input type="hidden" name="machine" value="@machine" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-secondary w-100">Unblock</button>
                                    </form>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <form method="post" asp-page-handler="Timer" class="d-flex gap-2">
                                        <input type="hidden" name="machine" value="@machine" />
                                        <input type="number" name="minutes" value="30" min="1" class="form-control" placeholder="Minutes" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-warning">Timer</button>
                                    </form>
                                </div>
                                <div class="col-12">
                                    <form method="post" asp-page-handler="SetGrace" class="d-flex gap-2">
                                        <input type="hidden" name="machine" value="@machine" />
                                        <input type="number" name="graceMinutes" value="@(pol?.ManualUnlockGraceMinutes ?? 10)" min="0" max="240" class="form-control" placeholder="Manual unlock grace (min)" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-primary">Save grace</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
